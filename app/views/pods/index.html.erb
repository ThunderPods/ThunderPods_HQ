<div class="page-header">
  <%= link_to new_pod_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Pod
  <% end %>
  <h1>Thunderpods</h1>
</div>



<% @pods.each do |pod| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pod.title %></h3>
    </div>
    <div class="panel-body">
      <%= pod.body %>
    </div>
  </div>


<% end %>
