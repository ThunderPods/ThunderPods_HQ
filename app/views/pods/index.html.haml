.page-header
  = link_to new_pod_path, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-plus
    New Pod
  = link_to "https://github.com/ThunderPods/Designs", class: 'btn' do
    %span.glyphicon.glyphicon-download
    Get Templates
  %h1 Thunderpods - Build | Remix | Share

.row
  .col-sm-12
    - @pods.each do |pod|
      .project.col-sm-3
        .panel.panel-default.project_box
          .images
            - if pod.image_url
              = link_to pod, class: "pod" do
                = image_tag pod.image.url, class: "img-responsive"

          .clearfix
          .panel-body
            .row
              .col-sm-8
                %i.fa.fa-cubes
                = link_to pod, class: "pod" do
                  = pod.title
              .col-sm-4
                .pull-right.small.text-muted
                  %i.fa.fa-users
                  = 0

            .copy
              = pod.body
          %div
            .btn-group
              = link_to "https://github.com/ThunderPods/Designs/blob/master/pods/pod_2x1.stl", class: 'btn btn-default btn-sm' do
                %span.glyphicon.glyphicon-download
              = link_to new_pod_path, class: 'btn btn-warning btn-sm' do
                %span.glyphicon.glyphicon-tool
                Build
              = link_to new_pod_path, class: 'btn btn-success btn-sm' do
                %span.glyphicon.glyphicon-plus
                Remix

            .clearfix
